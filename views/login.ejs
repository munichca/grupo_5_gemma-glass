<!DOCTYPE html>
<html lang="es">
  <!-- head -->
<%- include("partials/head")  %> 
<!-- fin head-->
  <body>

<!-- header -->

<%- include("partials/header")  %> 
<!-- fin header  -->

    
    <h2 class="titulo-login">¡Bienvenido de vuelta!</h2>
    <div class="container-form">
      <form action="/users/login/" class="form-login" method="POST" enctype="multipart/form-data"    >
        <label for="email">Ingresá tu Email</label>
        <input type="email" name="email" id="email-login" placeholder="ejemplo@ejemplo.com"/>
        <% if (locals.errors && errors.email) { %>
          <span class="text-danger"><%= errors.email.msg %> </span>
          <% } %>
        <label for="contraseña">Ingresá tu contraseña</label>
        <input type="password" name="contraseña" id="contraseña-login" />

        <a href="#" class="recupero-login">¿Olvidaste tu contraseña?</a>

        <button type="submit" class="btn-login">Iniciar sesión</button>

        <p class="new-account-login">
          ¿Sos nuevo? <a href="/registro">Creá tu cuenta</a>
        </p>
      </form>
    </div>

<!-- footer -->
<%- include("partials/footer")  %> 
<!-- fin footer  -->
  </body>
</html>
