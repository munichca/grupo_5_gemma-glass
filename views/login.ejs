<!DOCTYPE html>
<html lang="es">
  <!-- head -->
<%- include("partials/head")  %> 
<!-- fin head-->
  <body>

<!-- header -->

<%- include("partials/header")  %> 
<!-- fin header  -->

<main class="mainLogin">
  
    <div class="container-form">
      <h2 class="titulo-login">¡Bienvenido de vuelta!</h2>
      <form action="/users/login/" id="form" class="form-login" method="POST"  >
        <label class="label" for="email">Ingresá tu Email</label>
        <input type="email" name="email" id="email-login" placeholder="ejemplo@ejemplo.com"/>
       <% if (locals.errors && errors.email) { %>
            <small class="text-danger"><%= errors.email.msg %> </small>
          <% } %>
            <span class="text-danger" id="errorEmail"> </span>

        <label class="label" for="contraseña">Ingresá tu contraseña</label>
        <input type="password" name="pass" id="contraseña-login" />
         <% if (locals.errors && errors.pass) { %>
        <small class="text-danger"><%= errors.pass.msg %> </small>
      <% } %>
        <span class="text-danger" id="errorContraseña"> </span>
        <a href="#" class="recupero-login">¿Olvidaste tu contraseña?</a>
            <% if (locals.errorMsg ) { %>
                    <small class="text-danger"><%= errorMsg %> </small>
            <% } %>
            
            <div class="container_check">
                <div>
                  <input class="caca checkRegister" type="checkbox" name="remember" id="remember">
                  <label class="checkRegister labelRegister" for="remember">Recordar contraseña</label>
                </div>
          </div>
          <% if (locals.errors && errors.terms) { %>
              <span class="text-danger"><%= errors.terms.msg %> </span>
          <% } %>
        <button type="submit" class="btn btn-login">Iniciar sesión</button>
          <span class="text-danger" id="errorSubmit"> </span>
        <p class="new-account-login">
          ¿Sos nuevo? <a href="/users/addUser">Creá tu cuenta</a>
        </p>
      </form>
    </div>
</main>
    

<!-- footer -->

<!-- fin footer  -->
<script src="../js/validationLoginFront.js"></script>
  </body>
  <%- include("partials/footer")  %> 
</html>
