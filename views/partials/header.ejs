             <% if (typeof session.user != "undefined" ) { %>
                <ul>
               <li>  ¡Bienvenido <%= session.user.name %>! <a href="/users/user"><img class="avatar-header" src="/image/userAvatars/<%=session.user.avatar %>" alt="" width="50px"> </a>
            </li> 
                 <li><a href="/users/logout">Cerrar Sesion</a></li> 
                 </ul>
              <% }else{ %>
                <ul>
                    <li><a href="/users/login">Inicia sesión</a></li>
                     <li><a href="/users/addUser">Registrate</a></li>
                </ul>
    <% }  %> 
</div> 
</div>




        <div class="container_4">
            
             <% if (typeof session.user == "undefined" || session.user.rol === 'ROL_USER') { %>
            <div class="trolley">
                <a href="/trolley">
                
                    <i class="sixeC fa fa-shopping-cart"></i>
                    <p class="carrito">Mi carrito</p>
                </a>
                <% }else{ %>
                <ul class="ulMyDiv">
                     <li class=""><a class="btn mydiv" href="/admin/listado">ADMIN</a></li>
                </ul>
    <% }  %> 
            </div>

        </div>
        <nav class="container-nav">
            <ul>
                <% categoria.forEach(item => {%>
                <a href="/product/productcat/<%- item.id %>" > <li><%= item.name  %></li></a>                
                <% })  %> 
                <a  href="/product/productOfertas"> <li>Ofertas</li></a>
            
                <a  href="/turnos"> <li>Pedí una consulta</li></a>
            </ul>
        </nav>
        <script>
    function mostrar() {
        var x = document.getElementById("buscador");
           if (x.style.display === "block") {
           x.style.display = "none";
           } else {
                  x.style.display = "block";
    }
}
    
    
        </script>
